@{
    ViewData["Title"] = "Listar Cidades";

    // Exemplo de dados mockados (serão substituídos pelo back depois)
    var cidades = new List<string> { "São Paulo", "Rio de Janeiro", "Santa Fé do Sul" };
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Nome da Cidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cidade in cidades)
            {
                <tr>
                    <td>@cidade</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
