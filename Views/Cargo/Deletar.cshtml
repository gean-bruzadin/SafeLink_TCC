@model SafeLink_TCC.Models.CargoMODEL

@{
    ViewData["Title"] = "Excluir Cargo";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center text-danger">Excluir Cargo</h2>

    <div class="alert alert-warning w-50 mx-auto text-center">
        Tem certeza que deseja excluir o cargo <strong>@Model.nome_cargo</strong>?
    </div>

    <form asp-action="Deletar" method="post" class="text-center">
        <input type="hidden" asp-for="Id_Cargo" />
        <button type="submit" class="btn btn-danger">Sim, excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
