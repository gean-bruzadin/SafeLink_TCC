﻿@{
        ViewData["Title"] = "Login";

        Layout = null;

}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - SafeLink</title>

    <!-- ICONES -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- /ICONES -->


    <link rel="stylesheet" href="~/css/home.css" type="text/css" media="screen" />
</head>
<body>
    <header>

        <div class="logo">
            <a href="../../home.html" style="color: white; text-decoration: none; display: flex; align-items: center;">
                <span>SafeLink</span>
                <i class="fas fa-shield-alt fa-2x"></i>
            </a>
        </div>

        <div class="nav-container">
            <nav class="nav-links">
                <a href="forms/denuncia/denuncia.html"><i class="fas fa-exclamation-circle"></i> Denúncia</a>
                <a href="lista_denuncia.html"><i class="fas fa-list"></i> Minhas denúncias</a>
                <a href="acompanhamento.html"><i class="fas fa-search"></i> Acompanhamento</a>
            </nav>






            <nav class="btn_conta">
                <div class="profile-dropdown">
                    <div class="profile-dropdown-btn" onclick="toggleDropdown()">
                        <div class="profile-img">
                            <img src="~/img/profile.png" alt="" width="25px" height="25px" alt="Foto de perfil">
                        </div>
                        <span>
                            Gabriel
                            <i id="btn_seta" class="fa-solid fa-caret-down"></i>
                        </span>
                    </div>

                    <ul class="profile-dropdown-list" id="dropdownMenu">
                        <li class="profile-dropdown-list-item">
                            <button id="openUserModalBtn">
                                <i class="bi bi-person-circle"></i>Editar Perfil
                            </button>
                        </li>

                        <!-- MODAL USER -->
                        <dialog id="user-modal">
                            <form id="user-form" class="Usermodal-content">
                                <div class="close-btn">
                                    <span id="closeUserModalBtn" class="close">&times;</span>
                                </div>
                                <h2 id="modal_title">Perfil</h2>

                                <div class="profile-content">
                                    <img id="profile-preview" src="img/profile.png" alt="Foto de perfil">
                                    <h3 id="user-name">Gabriel Silva</h3>
                                    <p id="user-email">gabriel.silva@exemplo.com</p>
                                </div>

                                <div class="modal-buttons">
                                    <button type="button" id="editProfileBtn" class="save-btn">Editar Perfil</button>
                                    <button type="button" class="cancel-btn" id="closeUserModalCancel">Fechar</button>
                                </div>
                            </form>
                        </dialog>

                        <li class="profile-dropdown-list-item">
                            <a href="#">
                                <a href="tela_congif.html"><i class="bi bi-gear-fill"></i> Configurações</a>
                            </a>
                        </li>


                        <li class="profile-dropdown-list-item">
                            <a href="#">
                                <i class="bi bi-question-circle"></i> Ajuda e Suporte
                            </a>
                        </li>


                        <hr />
                        <li class="profile-dropdown-list-item">
                            <a href="#">
                                <i class="bi bi-box-arrow-in-left"></i> Sair
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>
    </header>



    <!-- CONTEUDO -->

    <section class="conteudo-home">

        <p id="bem-vindo">Bem-Vindo <br> ao <span style="margin-top: 15vh; margin-left: -40vh; color: #a02d33;">SafeLink</span></p>

        <img id="img-conteudo" src="~/img/undraw_blogging_38kl.svg" alt="" width="500px" height="500px">
    </section>

    <!-- BTN ACESSBILIDADE -->

    <div class="accessibility-container">
        <button class="accessibility-btn" onclick="toggleAccessibilityMenu()">
            <i class="bi bi-person-wheelchair"></i>
        </button>
        <ul class="accessibility-menu" id="accessibilityMenu">
            <li><button onclick="increaseFont()">Aumentar Fonte</button></li>
            <li><button onclick="decreaseFont()">Diminuir Fonte</button></li>
            <li><button onclick="toggleContrast()">Contraste Alto</button></li>
            <li><button onclick="toggleFocusMode()">Modo Foco</button></li>
            <li><button onclick="toggleTheme()">Trocar tema</button></li>
            <!-- Você pode adicionar mais aqui -->
        </ul>
    </div>

    <script src="script/menu_dropdown.js"></script>
    <script src="script/home.js"></script>
    <script src="script/open-modal.js"></script>
</body>
</html>