@{
    ViewData["Title"] = "Home Page";

    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SafeLink - Plataforma de Denúncias</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Estilos Customizados -->
    <link rel="stylesheet" href="@Url.Content("~/css/home.css")">
</head>
<body>
    <!-- Header -->
    <header class="safelink-header">
        <div class="logo">
            <span>SafeLink</span>
            <i class="fas fa-shield-alt fa-2x"></i>
        </div>

        <div class="nav-container">
            <nav class="nav-links">
                <a href="#"><i class="fas fa-exclamation-circle"></i> Denúncia</a>
                <a href="#"><i class="fas fa-list"></i> Minhas denúncias</a>
                <a href="#"><i class="fas fa-search"></i> Acompanhamento</a>
            </nav>

            <nav class="btn_conta">
                <div class="profile-dropdown">
                    <div class="profile-dropdown-btn" onclick="toggleDropdown()">
                        <div class="profile-img">
                            <img src="/img/profile.png" alt="Foto de perfil">
                        </div>
                        <span>
                            @User.Identity.Name
                            <i id="btn_seta" class="fa-solid fa-caret-down"></i>
                        </span>
                    </div>

                    <ul class="profile-dropdown-list" id="dropdownMenu">
                        <li class="profile-dropdown-list-item">
                            <button id="openUserModalBtn">
                                <i class="bi bi-person-circle"></i>Editar Perfil
                            </button>
                        </li>

                        <li class="profile-dropdown-list-item">
                            <a href="tela_config.html">
                                <i class="bi bi-gear-fill"></i> Configurações
                            </a>
                        </li>

                        <li class="profile-dropdown-list-item">
                            <a href="#">
                                <i class="bi bi-question-circle"></i> Ajuda e Suporte
                            </a>
                        </li>

                        <hr />
                        <li class="profile-dropdown-list-item">
                            <a href="/Autenticacao/Logout">
                                <i class="bi bi-box-arrow-in-left"></i> Sair
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Conteúdo Principal -->
    <main class="conteudo-home">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 id="bem-vindo">Bem-Vindo, <span class="text-primary">@User.Identity.Name</span> ao SafeLink</h1>
                    <p class="lead mt-4">Sua plataforma segura para registro e acompanhamento de denúncias.</p>
                    <div class="mt-5">
                        <a href="#" class="btn btn-primary btn-lg me-3"><i class="fas fa-plus-circle me-2"></i>Nova Denúncia</a>
                        <a href="#" class="btn btn-outline-primary btn-lg"><i class="fas fa-list me-2"></i>Minhas Denúncias</a>
                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <img src="/img/undraw_post_ok2.svg" alt="Ilustração SafeLink" class="img-fluid" width="500">
                </div>
            </div>
        </div>
    </main>

    <!-- Modal de Perfil -->
    <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="userModalLabel">Perfil do Usuário</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img src="/img/profile.png" alt="Foto de perfil" class="rounded-circle mb-3" width="100" height="100">
                    <h4>@User.Identity.Name</h4>
                    <p class="text-muted">@User.FindFirst("email")?.Value</p>

                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-2"></i>Editar Perfil
                        </button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Botão de Acessibilidade -->
    <div class="accessibility-container">
        <button class="accessibility-btn" onclick="toggleAccessibilityMenu()">
            <i class="bi bi-person-wheelchair"></i>
        </button>
        <ul class="accessibility-menu" id="accessibilityMenu">
            <li><button onclick="increaseFont()">Aumentar Fonte</button></li>
            <li><button onclick="decreaseFont()">Diminuir Fonte</button></li>
            <li><button onclick="toggleContrast()">Contraste Alto</button></li>
            <li><button onclick="toggleFocusMode()">Modo Foco</button></li>
            <li><button onclick="toggleTheme()">Trocar tema</button></li>
        </ul>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts Customizados -->
    <script src="js/safelink.js"></script>
</body>
</html>
