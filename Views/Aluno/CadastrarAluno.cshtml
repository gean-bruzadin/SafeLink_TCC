@model SafeLink_TCC.Models.AlunoMODEL
@{
    ViewData["Title"] = "Cadastro de Aluno";
    Layout = null; // se você tiver um _Layout.cshtml, remova essa linha para usar o layout e permitir as sections
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SafeLink</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Cadastro_Login.css" />
</head>
<body>
    <div class="container">
        <div class="image-side">
            <div class="image-container">
                <h1>Safelink</h1>
                <img src="~/img/undraw_confidential-letter_k1ni.svg" alt="Imagem decorativa" />
            </div>
        </div>

        <div class="form-side">
            <h2>Cadastre-se</h2>

            @* Antiforgery token obrigatório se ValidateAntiForgeryToken estiver ativado *@
            <form asp-action="Cadastrar" method="post">
                @Html.AntiForgeryToken()

                <div>
                    <label asp-for="Nome_Aluno"></label>
                    <input asp-for="Nome_Aluno" class="form-control" />
                    <span asp-validation-for="Nome_Aluno" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Email_Aluno"></label>
                    <input asp-for="Email_Aluno" class="form-control" />
                    <span asp-validation-for="Email_Aluno" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Senha_Aluno"></label>
                    <input asp-for="Senha_Aluno" type="password" class="form-control" />
                    <span asp-validation-for="Senha_Aluno" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>

            <p style="margin-top: 10px;">
                Já tem Conta? <a asp-controller="Autenticacao" asp-action="Login">Faça o Login</a>
            </p>
        </div>
    </div>

    @* Como Layout = null, inclua os scripts diretamente para validação cliente *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
