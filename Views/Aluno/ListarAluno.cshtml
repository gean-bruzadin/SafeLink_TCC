@model IEnumerable<SafeLink_TCC.Models.AlunoMODEL>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Lista de Alunos</h2>

    <div class="text-end mb-3">
        <a asp-action="Cadastrar" class="btn btn-success">+ Novo Aluno</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark text-center">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Gênero</th>
                <th>Data Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var aluno in Model)
        {
            <tr class="text-center">
                <td>@aluno.Id_Aluno</td>
                <td>@aluno.Nome_Aluno</td>
                <td>@aluno.Email_Aluno</td>
                <td>@aluno.Genero_Aluno</td>
                <td>@aluno.DataNascimento_Aluno.ToShortDateString()</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@aluno.Id_Aluno" class="btn btn-warning btn-sm">Editar</a>
                    <form asp-action="Deletar" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@aluno.Id_Aluno" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este aluno?')">Excluir</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
