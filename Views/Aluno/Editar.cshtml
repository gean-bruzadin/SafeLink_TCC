@model SafeLink_TCC.Models.AlunoMODEL
@{
    Layout = null; // Ou defina o Layout principal se houver
    
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edição de Usuário</title>
    <link href="https://fonts.googleapis.com/css2?family=Paytone+One&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>

        

        html, body {
            overflow-x: hidden;
            height: 100%;
            box-sizing: border-box;
            font-family: "Paytone One", sans-serif;
        }

        .edit-container {
            max-width: 500px;
            margin: 4rem auto;
            padding: 2rem;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .preview-img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="edit-container">
        <h2 class="mb-4">Editar Perfil</h2>

        <form asp-action="Cadastrar" method="post">
            @Html.AntiForgeryToken()

            <div>
                <label asp-for="Nome_Aluno"></label>
                <input asp-for="Nome_Aluno" class="form-control" />
                <span asp-validation-for="Nome_Aluno" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Email_Aluno"></label>
                <input asp-for="Email_Aluno" class="form-control" />
                <span asp-validation-for="Email_Aluno" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Senha_Aluno"></label>
                <input asp-for="Senha_Aluno" type="password" class="form-control" />
                <span asp-validation-for="Senha_Aluno" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>

    <script>
        const form = document.getElementById('edit-user-form');
        const cancelBtn = document.getElementById('cancelEditBtn');
        const inputImage = document.getElementById('inputImage');
        const newPreview = document.getElementById('new-preview');

        inputImage.addEventListener('change', () => {
            const file = inputImage.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    newPreview.src = e.target.result;
                    newPreview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        cancelBtn.addEventListener('click', () => window.history.back());
    </script>
</body>
</html>
