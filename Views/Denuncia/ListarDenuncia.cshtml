@model IEnumerable<SafeLink_TCC.Models.DenunciaMODEL>

@{
    ViewData["Title"] = "Minhas Denúncias";
    Layout = null; // se você tiver um _Layout.cshtml, remova essa linha para usar o layout e permitir as sections
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - SafeLink</title>

    <!-- ICONES -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- /ICONES -->

    <link rel="stylesheet" href="~/css/acompanhamento.css" type="text/css" />


</head>
<body>
    <header>
        <div class="logo">
            <a asp-controller="Home" asp-action="Index" style="color: white; text-decoration: none; display: flex; align-items: center;">
                <span>SafeLink</span>
                <i class="fas fa-shield-alt fa-2x"></i>
            </a>
        </div>

      
        <div class="nav-container">
            <nav class="nav-links">
                <a asp-controller="Denuncia" asp-action="Cadastrar"><i class="fas fa-exclamation-circle"></i> Denúncia</a>
                <a asp-controller="Denuncia" asp-action="Listar"><i class="fas fa-list"></i> Minhas denúncias</a>
                <a asp-controller="Denuncia" asp-action="Acompanhamento"><i class="fas fa-search"></i> Acompanhamento</a>
            </nav>

            <nav class="btn_conta">
                <div class="profile-dropdown">
                    <div class="profile-dropdown-btn" onclick="toggleDropdown()">
                        <div class="profile-img">
                            <img src="~/img/profile.png" alt="Foto de perfil" width="25px" height="25px">
                        </div>
                        <span>
                            @User.Identity?.Name
                            <i id="btn_seta" class="fa-solid fa-caret-down"></i>
                        </span>
                    </div>

                    <ul class="profile-dropdown-list" id="dropdownMenu">
                        <li class="profile-dropdown-list-item">
                            <button id="openUserModalBtn">
                                <i class="bi bi-person-circle"></i>Editar Perfil
                            </button>
                        </li>

                        <!-- MODAL USER -->
                        <dialog id="user-modal">
                            <form id="user-form" class="Usermodal-content">
                                <div class="close-btn">
                                    <span id="closeUserModalBtn" class="close">&times;</span>
                                </div>
                                <h2 id="modal_title">Perfil</h2>
                                <div class="profile-content">
                                    <img id="profile-preview" src="~/img/profile.png" alt="Foto de perfil">
                                    <h3 id="user-name">@User.Identity?.Name</h3>
                                    <p id="user-email">email@exemplo.com</p>
                                </div>
                                <div class="modal-buttons">
                                    <button type="button" id="editProfileBtn" class="save-btn">Editar Perfil</button>
                                    <button type="button" class="cancel-btn" id="closeUserModalCancel">Fechar</button>
                                </div>
                            </form>
                        </dialog>

                        <li class="profile-dropdown-list-item">
                            <a asp-controller="Config" asp-action="Index"><i class="bi bi-gear-fill"></i> Configurações</a>
                        </li>
                        <li class="profile-dropdown-list-item">
                            <a asp-controller="Home" asp-action="Ajuda"><i class="bi bi-question-circle"></i> Ajuda e Suporte</a>
                        </li>
                        <hr />
                        <li class="profile-dropdown-list-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-link text-danger">
                                    <i class="bi bi-box-arrow-in-left"></i> Sair
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <div class="complaints-list" id="complaints-list">
        @if (Model != null && Model.Any())
        {
            foreach (var denuncia in Model)
            {
                <div class="complaint-item" data-id="@denuncia.Id_denuncia">
                    <div class="complaint-info">
                        <div class="complaint-id">Denúncia #@denuncia.Id_denuncia</div>
                        <div class="complaint-date">Data: @denuncia.dataCriacao_denuncia.ToString("dd/MM/yyyy")</div>
                        <div class="complaint-summary">@denuncia.titulo_denuncia</div>
                        <div class="complaint-category">@denuncia.descricao_denuncia</div>
                    </div>
                    <div class="status-badge @GetStatusClass(denuncia.status_denuncia)">
                        @denuncia.status_denuncia
                    </div>
                </div>
            }
        }
        else
        {
            <p>Nenhuma denúncia encontrada.</p>
        }
    </div>

    <script src="~/script/menu_dropdown.js"></script>
    <script src="~/script/tema.js"></script>
    <script src="~/script/open-modal.js"></script>
    <script src="~/script/lista.js"></script>


</body>
</html>

@functions {
    private string GetStatusClass(SafeLink_TCC.Models.DenunciaStatus status)
    {
        return status switch
        {
            SafeLink_TCC.Models.DenunciaStatus.Pendente => "status-pending",
            SafeLink_TCC.Models.DenunciaStatus.EmAnalise => "status-investigating",
            SafeLink_TCC.Models.DenunciaStatus.Concluida => "status-done",
            SafeLink_TCC.Models.DenunciaStatus.Rejeitada => "status-rejected",
            _ => "status-unknown"
        };
    }
}
